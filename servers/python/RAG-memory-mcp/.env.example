# Environment Configuration for RAG Memory MCP Server

# Suppress TensorFlow warnings
TF_CPP_MIN_LOG_LEVEL=2  # 0=all, 1=info, 2=warning, 3=error
TF_ENABLE_ONEDNN_OPTS=0  # Disable oneDNN messages

# Suppress protobuf warnings
PROTOCOL_BUFFERS_PYTHON_IMPLEMENTATION=python

# Server configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=3031

# Database configuration
CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=mcp_knowledge_base

# Embedding model
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
