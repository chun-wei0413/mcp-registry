{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Definition Schema",
  "description": "Schema for defining Workflows (structured execution guides for AI-human collaboration)",
  "type": "object",
  "required": ["name", "purpose", "workflow"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the Workflow"
    },
    "purpose": {
      "type": "string",
      "description": "The primary goal and value proposition of this Workflow"
    },
    "triggers": {
      "type": "array",
      "description": "Conditions or commands that trigger this Workflow",
      "items": {
        "type": "string"
      }
    },
    "workflow": {
      "type": "array",
      "description": "The workflow stages",
      "items": {
        "type": "object",
        "required": ["stage", "actions"],
        "properties": {
          "stage": {
            "type": "string",
            "description": "Stage name"
          },
          "description": {
            "type": "string",
            "description": "What happens in this stage"
          },
          "actions": {
            "type": "array",
            "description": "AI and human actions in this stage",
            "items": {
              "type": "object",
              "required": ["actor", "action"],
              "properties": {
                "actor": {
                  "type": "string",
                  "enum": ["ai", "human", "both"],
                  "description": "Who performs this action"
                },
                "action": {
                  "type": "string",
                  "description": "The action to be performed"
                },
                "optional": {
                  "type": "boolean",
                  "default": false,
                  "description": "Whether this action is optional"
                }
              }
            }
          },
          "outputs": {
            "type": "array",
            "description": "Expected outputs from this stage",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Dependencies on other Workflows or resources",
      "properties": {
        "workflows": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "templates": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "techStacks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "successCriteria": {
      "type": "array",
      "description": "Measurable criteria for successful completion",
      "items": {
        "type": "string"
      }
    },
    "examples": {
      "type": "array",
      "description": "Usage examples",
      "items": {
        "type": "object",
        "required": ["scenario", "command"],
        "properties": {
          "scenario": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "expectedOutcome": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}