{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Configuration Schema",
  "description": "Schema for AI collaboration configuration",
  "type": "object",
  "required": ["engagementLevel"],
  "properties": {
    "engagementLevel": {
      "type": "string",
      "enum": ["high-engagement", "medium-engagement", "auto-pilot"],
      "description": "The level of human-AI collaboration"
    },
    "aiAutonomy": {
      "type": "object",
      "description": "What AI can do without asking",
      "properties": {
        "allowed": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "requiresApproval": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "forbidden": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "communicationStyle": {
      "type": "object",
      "properties": {
        "language": {
          "type": "string",
          "description": "Primary language for communication"
        },
        "formality": {
          "type": "string",
          "enum": ["formal", "casual", "technical"],
          "default": "technical"
        },
        "verbosity": {
          "type": "string",
          "enum": ["concise", "moderate", "detailed"],
          "default": "moderate"
        }
      }
    },
    "projectContext": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of project (web, mobile, cli, library, etc.)"
        },
        "techStack": {
          "type": "string",
          "description": "Reference to tech-stack to use"
        },
        "stage": {
          "type": "string",
          "enum": ["planning", "development", "testing", "maintenance"],
          "description": "Current project stage"
        }
      }
    },
    "workflowPreferences": {
      "type": "object",
      "properties": {
        "testFirst": {
          "type": "boolean",
          "default": true,
          "description": "Whether to write tests before implementation"
        },
        "documentationLevel": {
          "type": "string",
          "enum": ["minimal", "standard", "comprehensive"],
          "default": "standard"
        },
        "codeReviewDepth": {
          "type": "string",
          "enum": ["basic", "thorough", "exhaustive"],
          "default": "thorough"
        }
      }
    },
    "qualityGates": {
      "type": "object",
      "properties": {
        "requireTests": {
          "type": "boolean",
          "default": true
        },
        "minimumCoverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "default": 80
        },
        "lintingRules": {
          "type": "string",
          "description": "Reference to linting configuration"
        }
      }
    }
  },
  "additionalProperties": true
}