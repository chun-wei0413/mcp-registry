{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Generic Project Configuration Schema",
  "description": "Schema for generic project configuration across all tech stacks",
  "type": "object",
  "required": ["projectName", "techStack", "version"],
  "properties": {
    "projectName": {
      "type": "string",
      "description": "The name of the project",
      "pattern": "^[a-zA-Z][a-zA-Z0-9-_]*$"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the project"
    },
    "version": {
      "type": "string",
      "description": "Project version",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?$",
      "default": "0.1.0"
    },
    "techStack": {
      "type": "string",
      "description": "The technology stack used in the project",
      "examples": [
        "java-ca-ezddd-spring",
        "python-django",
        "nodejs-express",
        "go-gin",
        "rust-actix"
      ]
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Author's name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Author's email"
        }
      }
    },
    "repository": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["git", "svn", "mercurial"],
          "default": "git"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Repository URL"
        }
      }
    },
    "license": {
      "type": "string",
      "description": "License type",
      "examples": ["MIT", "Apache-2.0", "GPL-3.0", "BSD-3-Clause", "ISC"]
    }
  }
}